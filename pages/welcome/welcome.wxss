/* pages/welcome/welcome.wxss */

page {
  height: 100%;
  background-color: #b3d4db;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-top: 160rpx;
}

.user-nickName {
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.motto-container {
  margin-top: 210rpx;
  border: 1px solid #405f80;
  width: 250rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
}

.motto {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}
