/* pages/movies/movies.wxss */
@import "movie-list/movie-list-template.wxss";
@import "movie-grid/movie-grid-template.wxss";

page {
  background-color: #f2f2f2;
}

.search {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background-color: #f2f2f2;
  position: relative;
}

.search-img {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.search-text {
  width: 500rpx;
  height: 100%;
  font-size: 28rpx;
  color: #000;
}

.search-placeholder {
  margin-left: 20rpx;
  font-size: 14px;
  color: #d1d1d1;
}

.search-close {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 20rpx;
  top: 25rpx;
}

.search-panel {
  position: absolute;
  top: 80rpx;
}
