<view class="search">
  <icon class="search-img" type="search" size="13" color="#405f80"></icon>
  <input class="search-text" type="text" placeholder='功夫足球' placeholder-class="search-placeholder" bindfocus='onBindFocus' bindblur='onBindConfirm'>
  </input>
  <image wx:if="{{isShowSearch}}" class="search-close" src="/images/icon/xx.png" bindtap="onCloseTap"></image>
</view>

<view wx:if="{{containerShow}}" class="container">
  <v-movie-list list="{{inTheaters}}" />
  <v-movie-list list="{{comingSoon}}" />
  <v-movie-list list="{{top250}}" />
</view>

<view wx:if="{{isShowSearch}}" class="search-panel">
  <v-movie-grid movies="{{searchResult.movies}}" />
</view>