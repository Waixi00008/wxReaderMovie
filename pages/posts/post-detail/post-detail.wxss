/* pages/posts/post-detail/post-detail.wxss */

.container {
  display: flex;
  flex-direction: column;
}

.header-img {
  position: relative;
}

.header-cover {
  width: 100%;
  height: 448rpx;
}

.audio {
  position: absolute;
  top: calc(50% - 55rpx);
  left: calc(50% - 51rpx);
  width: 102rpx;
  height: 110rpx;
  opacity: 0.6;
}

.author-date {
  padding: 20rpx 30rpx;
  margin-bottom: 32rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

.author {
  margin-right: 20rpx;
  font-size: 32rpx;
  font-weight: 300;
  color: #666;
  vertical-align: middle;
}

.publish, .date {
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.title {
  margin-left: 30rpx;
  margin-bottom: 30rpx;
  font-size: 40rpx;
  line-height: 1.5;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
}

.collection-img, .share-img {
  float: right;
  width: 96rpx;
  height: 96rpx;
  margin-right: 30rpx;
}

.horizon-line {
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  width: calc(100% - 60rpx);
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  z-index: -99;
}

.content {
  margin: 10rpx 30rpx;
  font-size: 24rpx;
  line-height: 44rpx;
  letter-spacing: 2rpx;
  color: #666;
}
