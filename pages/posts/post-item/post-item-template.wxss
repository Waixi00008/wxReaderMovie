.post-container {
  display: flex;
  flex-direction: column;
  margin-top:40rpx;
  padding-bottom:20rpx;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
  background-color:#ffffff;
}
.post-container:first-of-type {
  margin-top:0;
  border-top:none;
}
.post-author{
  width:56rpx;
  height: 56rpx;
  vertical-align: middle;
}
.post-author-date {
  margin: 10rpx 0 30rpx 20rpx;
}
.post-date {
  margin-left: 36rpx;
  vertical-align: middle;
  color:#a9a9a9;
  font-size:22rpx;
}
.post-title {
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  color:#333333;
  font-size: 36rpx;
  font-weight: 600;
}
.post-image {
  margin-bottom: 30rpx;
  width: 100%;
  height: 340rpx;
}
.post-content {
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color:#666666;
  letter-spacing:2rpx;
}
.post-like {
  margin-left:20rpx;
  font-size: 16px;
  line-height: 32rpx;
}
.post-like-image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-text {
  vertical-align: middle;
  margin-right: 20px;
  color:#666666;
}